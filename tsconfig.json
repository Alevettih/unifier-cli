{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceRoot": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@specifier/*": ["src/utils/specifier/*"]
    },
    "lib": ["es2018", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/__mocks__/*.ts", "src/codebase/**/*.*", "**/*.test.ts"]
}
