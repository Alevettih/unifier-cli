{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceRoot": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "*": [ "node_modules/*" ],
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@specifier/*": ["src/utils/specifier/*"],
      "@specification/*": ["src/specification/*"]
    },
    "lib": ["es2018", "dom"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/__mocks__/*.ts",
    "src/specification/**/*.*",
    "src/codebase/**/*.*",
    "**/*.test.ts"
  ]
}
