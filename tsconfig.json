{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceRoot": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@src/*": ["src/*"],
      "@misc/*": ["src/misc/*"],
      "@tasks/*": ["src/tasks/*"],
      "@abstracts/*": ["src/misc/abstracts/*"],
      "@helpers/*": ["src/misc/helpers/*"],
      "@modules/*": ["src/modules/*"],
      "@templates/*": ["src/templates/*"],
      "@enum/*": ["src/types/enum/*"],
      "@interface/*": ["src/types/interface/*"],
      "@type/*": ["src/types/type/*"]
    },
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/codebase/**/*.*"]
}
