{
  "name": "unifier-cli",
  "version": "0.6.0",
  "description": "unifier-cli is a front-end tool, that created for unifying all configs, structure, and share base codebase within different Requestum projects",
  "main": "dist/cli.js",
  "scripts": {
    "prepare": "husky install && husky set .husky/pre-commit \"npm run hook:pre-commit\" && npm run build",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "build": "run-s build:app build:cli",
    "build:app": "webpack --mode production",
    "build:cli": "node ./bin/generage-cli",
    "lint": "eslint src --fix",
    "dev": "webpack --watch --progress --mode production",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "pretty-quick": "pretty-quick --staged",
    "hook:pre-commit": "npm run pretty-quick"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/requestum-team/unifier-cli.git"
  },
  "keywords": [
    "unifying",
    "configs",
    "project-template",
    "project-generator",
    "angular",
    "js",
    "email"
  ],
  "author": "Alex Tykhonenko <alevettih@gmail.com>",
  "license": "MIT",
  "bin": {
    "unifier-cli": "bin/cli"
  },
  "bugs": {
    "url": "https://github.com/requestum-team/unifier-cli/issues"
  },
  "homepage": "https://github.com/requestum-team/unifier-cli#readme",
  "husky": {
    "hooks": {
      "pre-commit": "run-s pretty-quick lint test"
    }
  },
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "deepmerge": "^4.2.2",
    "execa": "^5.1.1",
    "fs-extra": "^10.1.0",
    "inquirer": "^8.2.1",
    "listr2": "^4.0.5",
    "minimist": "^1.2.6",
    "path": "^0.12.7",
    "rimraf": "^3.0.2",
    "semver": "^7.3.7",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0"
  },
  "devDependencies": {
    "@types/execa": "^2.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^28.1.6",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.0.6",
    "@types/semver": "^7.3.10",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-webpack-plugin": "^3.2.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-loader": "^9.3.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.7.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  }
}
