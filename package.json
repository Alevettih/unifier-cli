{
  "name": "unifier-cli",
  "version": "0.5.4",
  "description": "unifier-cli is a front-end tool, that created for unifying all configs, structure, and share base codebase within different Requestum projects",
  "main": "dist/main.js",
  "scripts": {
    "prepare": "husky install && husky set .husky/pre-commit \"npm run hook:pre-commit\" && npm run build",
    "prepublishOnly": "npm run lint && npm run test",
    "build": "rimraf dist && node bin/copy-modules && tsc ",
    "lint": "eslint src --fix",
    "dev": "nodemon -e ts -w src -x npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "pretty-quick": "pretty-quick --staged",
    "hook:pre-commit": "npm run pretty-quick"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/requestum-team/unifier-cli.git"
  },
  "keywords": [
    "unifying",
    "configs",
    "project-template",
    "project-generator",
    "angular",
    "js",
    "email"
  ],
  "author": "Alex Tykhonenko <alevettih@gmail.com>",
  "license": "MIT",
  "bin": {
    "unifier-cli": "bin/cli"
  },
  "bugs": {
    "url": "https://github.com/requestum-team/unifier-cli/issues"
  },
  "homepage": "https://github.com/requestum-team/unifier-cli#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretty-quick; onerror \"npm run lint\" --title=\"Linters error:\" && onerror \"jest\" --title=\"Tests error:\""
    }
  },
  "dependencies": {
    "cli-error-notifier": "^2.1.0",
    "colors": "^1.4.0",
    "deepmerge": "^4.2.2",
    "execa": "^5.1.1",
    "fs-extra": "^10.1.0",
    "inquirer": "^8.2.1",
    "listr2": "^4.0.5",
    "minimist": "^1.2.6",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.19",
    "path": "^0.12.7",
    "rimraf": "^3.0.2",
    "semver": "^7.3.7",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/execa": "^2.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^28.1.6",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.0.6",
    "@types/semver": "^7.3.10",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3"
  }
}
